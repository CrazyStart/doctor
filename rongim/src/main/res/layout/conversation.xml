<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_icon"
            android:layout_marginLeft="15dp"
            android:id="@+id/back_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="聊天中"
            android:textColor="#333333"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/title"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:src="@drawable/more_icon"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/right_icon"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <fragment
                android:id="@+id/conversation"
                android:name="io.rong.imkit.fragment.ConversationFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="-50dp"
                android:orientation="vertical"
                android:id="@+id/end_layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="本次回访已结束"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:background="#FFFFFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="立即回访"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#AD85FC"
                    android:id="@+id/btn_huifang"/>

            </LinearLayout>


        </LinearLayout>




        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/time_icon_single"
            android:layout_alignParentRight="true"
            android:src="@drawable/time_icon"/>

        <RelativeLayout
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/time_bg_layout"
            android:paddingLeft="7dp"
            android:background="@drawable/time_bg_icon">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/time_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离结束时间还剩"
                android:id="@+id/time_info"
                android:layout_marginTop="2dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/time_info"
                android:textColor="#FFFFFF"
                tools:text="24:00:00"
                android:layout_marginLeft="20dp"
                android:id="@+id/time_text"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>